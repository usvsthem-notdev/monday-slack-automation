{
  "name": "monday-slack-automation",
  "version": "6.0.0",
  "description": "Unified Monday.com to Slack automation with async processing, interactive commands, webhooks, and real-time task management",
  "main": "src/unified-server.js",
  "scripts": {
    "start": "node src/unified-server.js",
    "dev": "NODE_ENV=development node src/unified-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "profile:flame": "0x --output-dir=.profiles/flame src/unified-server.js",
    "profile:doctor": "clinic doctor --on-port 'autocannon -c 10 -d 30 localhost:$PORT/health' --dest .profiles/doctor -- node src/unified-server.js",
    "profile:heapprofiler": "clinic heapprofiler --on-port 'autocannon -c 10 -d 30 localhost:$PORT/health' --dest .profiles/heap -- node src/unified-server.js",
    "profile:bubbleprof": "clinic bubbleprof --on-port 'autocannon -c 10 -d 30 localhost:$PORT/health' --dest .profiles/bubble -- node src/unified-server.js",
    "profile:baseline": "node --prof src/unified-server.js",
    "profile:compare": "node scripts/compare-profiles.js",
    "pgo:baseline": "node scripts/pgo-workflow.js baseline",
    "pgo:baseline:mock": "MOCK_MODE=true node scripts/pgo-workflow.js baseline",
    "pgo:optimize": "node scripts/pgo-workflow.js optimize",
    "pgo:verify": "node scripts/pgo-workflow.js verify",
    "pgo:verify:mock": "MOCK_MODE=true node scripts/pgo-workflow.js verify"
  },
  "dependencies": {
    "@slack/bolt": "^3.17.1",
    "@slack/web-api": "^7.0.4",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "monday.com",
    "slack",
    "automation",
    "slack-commands",
    "webhook",
    "interactive-components",
    "task-management",
    "real-time",
    "async-processing",
    "background-jobs",
    "unified-server"
  ],
  "author": "Connor Drexler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/usvsthem-notdev/monday-slack-automation.git"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "0x": "^6.0.0",
    "autocannon": "^8.0.0",
    "clinic": "^13.0.0",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "nock": "^14.0.11",
    "supertest": "^7.2.2"
  }
}
